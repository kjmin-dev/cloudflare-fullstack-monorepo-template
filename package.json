{
  "name": "cloudflare-workers-backend-template",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --ui tui",
    "build": "turbo run build",
    "deploy": "turbo run deploy",
    "webapp": "bun --cwd packages/webapp",
    "api": "bun --cwd packages/api",
    "format": "bun biome format --write",
    "lint": "bun biome lint"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@cloudflare/workers-types": "^4.20251223.0",
    "@types/bun": "1.3.5",
    "turbo": "^2.7.2",
    "wrangler": "^4.54.0"
  },
  "peerDependencies": {
    "typescript": "5.9.3"
  }
}
